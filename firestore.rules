rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own portfolio sections
    match /users/{userId}/sections/{sectionId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow public read access to user profiles for public portfolios
    match /users/{userId} {
      allow read: if true; // Public read for portfolio viewing
    }
    
    // Allow public read access to portfolio sections for public portfolios
    match /users/{userId}/sections/{sectionId} {
      allow read: if true; // Public read for portfolio viewing
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}